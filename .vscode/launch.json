{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Research Server",
            "type": "debugpy",
            "request": "launch",
            "module": "github_research_mcp.main",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": ["--mcp-transport", "streamable-http"]
        },
        {
            "name": "Public Server",
            "type": "debugpy",
            "request": "launch",
            "module": "github_research_mcp.agents_md",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": ["--mcp-transport", "streamable-http"]
        },
        // Debug Tests config
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "args": [
                "-vv",
                "-s" // Disable Captures
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}